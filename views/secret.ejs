<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/stylesheets/stylesheet.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/secret.css">
    <title><%- title %></title>
</head>
<body>
    <%- include("partials/navbar"); %>
    <% if (locals.errorMessages && locals.errorMessages.length > 0) { %>
        <div class="alertsContainer">
            <ul>
                <% displayMessages.forEach((message) => { %>
                <li><%= message %></li>
                <% }) %>
            </ul>
        </div>
    <% } %>
    <form action="/secret" method="POST" class="secretForm">
        <label for="secret" class="secretFormItemLabel">Secret:</label>
        <input id="secret" name="secret" type="password" class="secretFormInput">
        <button class="secretFormSubmitButton">Submit</button>
    </form>
</body>
</html>